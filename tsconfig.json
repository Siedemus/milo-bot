{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
